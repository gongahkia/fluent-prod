# Server Configuration
PORT=3001
NODE_ENV=development

# API Keys (Get your own keys from respective services)
NEWSAPI_KEY=your_newsapi_key_here
GUARDIAN_API_KEY=your_guardian_api_key_here

# Twitter API Credentials (Required for Twitter scraping)
# Get your Bearer Token from: https://developer.twitter.com/en/portal/dashboard
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Instagram Credentials (Required for Instagram scraping)
# Note: Use a dedicated account, not your personal account
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password

# AI Services (Google Gemini)
# Get your free API key from: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
