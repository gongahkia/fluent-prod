# Server Configuration
PORT=3001
NODE_ENV=production

# Firebase Admin SDK Configuration (REQUIRED for Render)
# Get these from your Firebase Console -> Project Settings -> Service Accounts
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"

# Alternative: Path to service account JSON file (for local development)
# FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccountKey.json

# CORS Configuration (REQUIRED)
# Add your frontend URLs separated by commas
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-app.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# API Keys (Optional - for future expansion)
NEWSAPI_KEY=your_newsapi_key_here
GUARDIAN_API_KEY=your_guardian_key_here
NYTIMES_API_KEY=your_nytimes_key_here
MEDIASTACK_API_KEY=your_mediastack_key_here
GNEWS_API_KEY=your_gnews_key_here

# Gemini API Key (REQUIRED for AI comment suggestions)
GEMINI_API_KEY=your_gemini_api_key_here

# Scheduled Jobs
RUN_FETCH_ON_STARTUP=false
