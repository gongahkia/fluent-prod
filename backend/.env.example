# Backend folder is scripts-only (no deployed server).
# These values are used by GitHub Actions and/or local runs.

# Prune job (GitHub Actions): service account JSON (string or base64-encoded)
FIREBASE_SERVICE_ACCOUNT_JSON=

# Cache generator script options (optional)
CACHE_PRESET=showcase
TARGET_LANG=ja
MAX_NEW_POSTS=200
POSTS_PER_SUBREDDIT=4
CONCURRENCY_LIMIT=5
OUT_FILE=news-cache.txt

# Prune options (optional)
CACHE_PATH=../cache/news-cache.txt
MAX_ROWS=500
DATABASE_URL=your_database_url_here

# Server Configuration
PORT=3001
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:5173

# Job Configuration
RUN_FETCH_ON_STARTUP=true

# API Keys
GEMINI_API_KEY=your-gemini-api-key
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_REDIRECT_URI=http://localhost:5173/auth/reddit/callback

# Security
ENCRYPTION_KEY=your-encryption-key-32-chars-min

# Admin Dashboard
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin