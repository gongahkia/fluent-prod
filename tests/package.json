{
  "name": "livepeek-tests",
  "version": "1.0.0",
  "description": "Test suite for LivePeek project quality assurance",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:lint": "jest lint.test.js",
    "test:commit": "jest commit.test.js",
    "test:push": "jest push.test.js",
    "test:all": "jest --verbose",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "../src/**/*.{js,jsx}",
      "!../src/**/*.test.{js,jsx}",
      "!../node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}