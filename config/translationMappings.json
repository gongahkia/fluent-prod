  "translationPairs": {
    "en-ja": {
      "from": "en",
      "to": "ja",
      "enabled": true,
      "bidirectional": true,
      "apiProviders": ["lingva", "mymemory", "libretranslate"],
      "priority": 1
    },
    "ja-en": {
      "from": "ja",
      "to": "en",
      "enabled": true,
      "bidirectional": true,
      "apiProviders": ["lingva", "mymemory", "libretranslate"],
      "priority": 1
    },
    
  },
  "apiEndpoints": {
    "lingva": {
      "baseUrl": "https://lingva.ml/api/v1",
      "urlPattern": "{baseUrl}/{fromLang}/{toLang}/{text}",
      "method": "GET",
      "timeout": 5000,
      "enabled": true,
      "priority": 1
    },
    "mymemory": {
      "baseUrl": "https://api.mymemory.translated.net/get",
      "urlPattern": "{baseUrl}?q={text}&langpair={fromLang}|{toLang}",
      "method": "GET",
      "timeout": 5000,
      "enabled": true,
      "priority": 2
    },
    "libretranslate": {
      "baseUrl": "https://libretranslate.com/translate",
      "urlPattern": "{baseUrl}",
      "method": "POST",
      "timeout": 5000,
      "enabled": true,
      "priority": 3,
      "requestBody": {
        "q": "{text}",
        "source": "{fromLang}",
        "target": "{toLang}",
        "format": "text"
      }
    }
  },
  "learningLevels": {
    "1": {
      "name": "Beginner",
      "translationPercentage": 0.15,
      "color": "green"
    },
    "2": {
