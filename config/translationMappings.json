{
  "version": "1.0.0",
  "description": "Universal bidirectional translation mappings for all supported language pairs",
  "languages": {
    "en": {
      "code": "en",
      "name": "English",
      "nativeName": "English",
      "flag": "ðŸ‡ºðŸ‡¸",
      "characterRanges": {
        "regex": "^[a-zA-Z\\s.,!?;:\"'()[\\]{}â€”â€“-]+$",
        "description": "English characters"
      }
    },
    "ja": {
      "code": "ja",
      "name": "Japanese",
      "nativeName": "æ—¥æœ¬èªž",
      "flag": "ðŸ‡¯ðŸ‡µ",
      "characterRanges": {
        "regex": "[\\u3040-\\u309F\\u30A0-\\u30FF\\u4E00-\\u9FAF]",
        "description": "Hiragana, Katakana, Kanji"
